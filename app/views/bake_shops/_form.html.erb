<% if @bake_shop.errors.any? %>
    <% @bake_shop.errors.full_messages.each do |message| %>
    <%= message %>
    <% end %>
<% end %>

<%= form_for @bake_shop do |f| %>
<%= f.label "Name:" %>
<%= f.text_field :name %>
<br>
<br>
<%= f.label "City:"%>
<%= f.text_field :city %>
<br>
<br>
<%= f.label "phone_number:"%>
<%= f.text_field :phone_number %>
<br>
<br>
<%= f.submit "Submit" %>

<% end %>