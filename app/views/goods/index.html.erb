<h1>Goods' List</h1>

<div class="row">
    <div>
    <%= button_to "New", new_good_path, method: "get", class: "btn btn-primary" %>
    </div>

    <div>
    <%= button_to "Order by Id", goods_path, method: "get", class: "btn btn-primary" %>
    </div>

    <div>
    <%= button_to "Order By Name", goods_path, method: "get", params: {order: "name"}, class: "btn btn-primary" %>
    </div>
</div>
<br>
<div class="row">

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Calories</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>

    </tr>
  </thead>
  <tbody>
    <% @goods.each do |good| %>
    <tr>
      <td><%= good.name %></td>
      <td><%= good.price %></td>
      <td><%= good.calories %></td>
      <td><%= button_to "show", good_path(good), method: "get", class: "btn btn-light" %></td>
      <td><%= button_to "edit", edit_good_path(good), method: "get", class: "btn btn-primary" %></td>
      <td><%= button_to "delete", good_path(good), method: "delete", class: "btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
